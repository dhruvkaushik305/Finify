generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String    @id @default(cuid())
  userId             String
  providerType       String
  providerId         String
  providerAccountId  String    @map("provider_account_id")
  refreshToken       String?
  accessToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])

  @@unique([providerId, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  sessions      Session[]
  statement     Statement?
}

model VerificationRequest {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
}

model Statement {
  id             String        @id @default(cuid())
  balance        Int
  spent          Int           @default(0)
  budget         Int
  userId         String        @unique
  User           User          @relation(fields: [userId], references: [id])
  transactionsId String?
  Transaction    Transactions? @relation(fields: [transactionsId], references: [id])
}

model Transactions {
  id          String      @id @default(uuid())
  Expense     Expense[]
  statementId String      @unique
  Statement   Statement[]
}

model Expense {
  id             String       @id @default(uuid())
  amount         Int
  type           ExpenseType
  date           DateTime
  transactionsId String
  Transactions   Transactions @relation(fields: [transactionsId], references: [id])
}

enum ExpenseType {
  Credit
  Debit
}
